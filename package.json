{
  "name": "my-website2.0",
  "version": "2.0.0",
  "description": "Публичный сайт и приватный кабинет для управления заметками, файлами и идеями",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development next dev",
    "build": "cross-env NODE_ENV=production prisma generate && cross-env NODE_ENV=production next build",
    "start": "cross-env NODE_ENV=production node scripts/start-server.js",
    "start:dev": "cross-env NODE_ENV=development next dev",
    "lint": "next lint",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node scripts/init-admin.js",
    "db:init": "node scripts/init-db.js",
    "db:migrate-data": "node scripts/migrate-db.js",
    "db:add-website-project": "node scripts/add-website-project.js",
    "setup:env": "powershell -ExecutionPolicy Bypass -File scripts/create-env.ps1",
    "postinstall": "prisma generate",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:ps": "docker-compose ps",
    "docker:exec": "docker-compose exec app sh"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.1",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "framer-motion": "^11.11.17",
    "next": "^15.1.3",
    "next-auth": "^5.0.0-beta.25",
    "otpauth": "^9.3.3",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^9.0.1",
    "speakeasy": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "22.19.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/speakeasy": "^2.0.9",
    "autoprefixer": "^10.4.22",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
